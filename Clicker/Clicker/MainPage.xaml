<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Clicker"
             x:Class="Clicker.MainPage">
    
    <StackLayout HorizontalOptions="FillAndExpand" Spacing="0" >
        <Label Text="Počet léků:" VerticalOptions="Center"  HorizontalOptions="Center" FontSize="30" Margin="0,20,0,0"/>
        <Label Text="{Binding LekyCTR}" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0" FontSize="50" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}"/>
            </Label.GestureRecognizers>
        </Label>
        <Label Text="{Binding AutoLeky}" HorizontalOptions="Center"></Label>
        <Button Text="{Binding LekyCTR}" HeightRequest="80"  Command="{Binding UpgradeFactory}"> </Button>
    </StackLayout>
	

</ContentPage>
